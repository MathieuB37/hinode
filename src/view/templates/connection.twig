{% extends 'layout.twig' %}

{% block head %}
    <title>Connection</title>
{% endblock %}

{% block mainContent %}
    <!-- HTTP request can only have one verb, but this way I can use both of them (GET for the action and POST for the form) -->
    <form action="index.php?p=connection" method="POST">
        <input type="text" name="login">
        <input type="password" name="password">
        <input type="submit">
    </form>
{% endblock %}