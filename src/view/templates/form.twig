{# Generate input field for form #}
{% macro inputField(label, name, type = "text") %}
    <div class="form-group col-3">
        <label for="{{ name }}">{{ label }}</label>
        <input 
            class="form-control" 
            type="{{ type }}" 
            name="{{ name }}" 
            placeholder="{{ label }}"
            required
        >
    </div>
{% endmacro %}

{# Generate submit button for form  #}
{% macro submitBtn() %}
    <div class="form-group col-2">
        <input class="form-control btnSubmit" type="submit">
    </div>
{% endmacro %}

{# Genreate a textarea #}
{% macro textArea(label, name, cols = "30", rows = "30") %}
    <div class="form-group col-2">
        <label for="{{ name }}">{{ label }}</label>
        <textarea 
            class="form-control text-area" 
            name="{{ name }}" 
            cols="{{ cols }}" 
            rows="{{ rows }}">
            required
        </textarea>
    </div>
{% endmacro %}


